{
  "name": "persian-web-toolkit",
  "version": "0.3.3",
  "datepickerVersion": "0.3.6",
  "persiandateVersion": "0.1.8",
  "dependencies": {
    "jquery": "2.2.0",
    "persian-date": "=0.1.8-b",
    "persian-datepicker": "=0.4.5"
  },
  "scripts": {
    "pre-dev": "sudo npm install -g mkdocs",
